{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "language-and-literature-admin"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        {
          "glob": "**/*",
          "input": "./formula-editor/build",
          "output": "./build"
        },
        {
          "glob": "**/*",
          "input": "./formula-editor/fonts",
          "output": "./fonts"
        },
        {
          "glob": "**/*",
          "input": "./formula-editor/skins",
          "output": "./skins"
        },
        {
          "glob": "config.json",
          "input": "./formula-editor/",
          "output": "./config.json"
        },
        {
          "glob": "equation_editor.html",
          "input": "./formula-editor/",
          "output": "./equation_editor.html"
        },
        {
          "glob": "plugin.min.js",
          "input": "./formula-editor/",
          "output": "./plugin.min.js"
        }
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "nt",
      "styles": [
        "styles/theme.scss",
        "styles/main.scss",
        "../node_modules/material-design-icons/iconfont/material-icons.css"
      ],
      "scripts": [
        "../node_modules/hammerjs/hammer.js",
        "../node_modules/jquery/dist/jquery.js",
        "../node_modules/tinymce/tinymce.js",
        "../node_modules/tinymce/plugins/table/plugin.js",
        "../node_modules/tinymce/plugins/link/plugin.js",
        "../node_modules/tinymce/plugins/paste/plugin.js",
        "../node_modules/tinymce/themes/modern/theme.js",
        "./formula-editor/build/js/equation_editor.js",
        "./formula-editor/build/js/mathquill.min.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "scss",
    "component": {}
  }
}
