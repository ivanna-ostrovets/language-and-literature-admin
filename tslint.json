{
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "extends": ["tslint:latest", "tslint-eslint-rules", "tslint-sonarts"],
  "rules": {
    "prefer-object-spread": false,
    "no-implicit-dependencies": false,
    "no-string-literal": false,
    "no-magic-numbers": [true, 0, 1, 2, 3, 10, 60, 100, 400, 401, 403, 404, 500, 503, 600, 1000, 1024],
    "import-blacklist": [true, "rxjs", "lodash", "lodash-es", "md2", "@covalent/core"],
    "no-submodule-imports": false,
    "indent": [true, "spaces"],
    "quotemark": [true, "single"],
    "max-line-length": [
      true,
      {
        "limit": 120,
        "ignore-pattern": "^import |^export {(.*?)}"
      }
    ],
    "newline-before-return": true,
    "curly": true,
    "object-literal-key-quotes": [true, "consistent-as-needed"],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "no-irregular-whitespace": true,
    "no-shadowed-variable": true,
    "max-classes-per-file": [true, 1],
    "comment-format": [true, "check-space"],
    "jsdoc-format": false,
    "no-inferrable-types": [true, "ignore-params", "ignore-properties"],
    "typedef": [
      true,
      "parameter",
      "property-declaration",
      "member-variable-declaration"
    ],
    "member-access": [true, "no-public"],
    "no-any": false,
    "arrow-parens": [true, "ban-single-arg-parens"],
    "no-empty": false,
    "object-literal-shorthand": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "member-ordering": false,
    "interface-name": false,
    "variable-name": false,
    "no-require-imports": false,
    "no-var-requires": false,
    "no-import-side-effect": false,
    "no-parameter-properties": false,
    "prefer-function-over-method": false,
    "no-null-keyword": false,
    "no-multi-spaces": true,
    "ter-indent": [
      true,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "object-curly-spacing": [
      true,
      "always"
    ],
    "space-in-parens": [
      true,
      "never"
    ],
    "array-bracket-spacing": [
      true,
      "never"
    ],
    "directive-selector": [
      true,
      "attribute",
      "nt",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "nt",
      "kebab-case"
    ],
    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": true,
    "no-attribute-parameter-decorator": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "no-forward-ref": false,
    "use-life-cycle-interface": true,
    "use-pipe-transform-interface": true,
    "pipe-naming": [
      true,
      "camelCase",
      "nt"
    ],
    "component-class-suffix": true,
    "directive-class-suffix": true,
    "import-destructuring-spacing": true,
    "prefer-immediate-return": false
  },
  "jsRules": {
    "quotemark": [true, "single"],
    "no-console": false,
    "trailing-comma": false,
    "object-literal-sort-keys": false,
    "variable-name": false
  }
}
